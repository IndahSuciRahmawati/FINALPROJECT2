<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TugasAkhir2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Button_Exclusive">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="Typography">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.EditText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.EditText.White">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Typography.Heading">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Typography.Heading.Bold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Typography.Heading.White">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Typography.Heading.White.Bold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>